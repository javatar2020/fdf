#include "fdf.h"

t_pixel *new_pixel(int z, int color)
{
	t_pixel *new;

	if (!(new = (t_pixel *)malloc(sizeof(t_pixel))))
		return (NULL);
	new->z = z;
	new->color = color;
	return (new);	
}




t_pixel **get_map(int fd, int size)
{
	t_pixel **map;
	char **tab;
	char *line;
	int i;
	int j;


	i = 0;
	if (!(map = (t_pixel **)malloc(sizeof(t_pixel *) * size)))
		return (NULL);
	while (get_next_line(fd, &line) > 0)
	{
		tab = ft_strsplit(line, ' ');
		if ((map[i] = (t_pixel *)malloc(sizeof(t_pixel) * tab_len(tab))))
			return (NULL);
		j = 0;
		while (tab[j])
		{
			
			if (is_color(tab[i]))
				map[j] = something();
			else
				something();
		}
		i++;
	}
}
